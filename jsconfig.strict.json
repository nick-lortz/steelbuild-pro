{
  "extends": "./jsconfig.json",
  "compilerOptions": {
    "checkJs": true,
    "allowJs": true,
    "noEmit": true
  },
  "include": [
    "src/lib/**/*.ts",
    "src/lib/**/*.tsx",
    "src/api/**/*.ts",
    "src/api/**/*.tsx",
    "src/utils/**/*.ts",
    "src/utils/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist"]
}
