# Frontend adapter mode
VITE_BACKEND_PROVIDER=owned

# Optional: point frontend adapter to a custom gateway base URL
# Defaults to /api when omitted
VITE_OWNED_API_BASE_URL=/api

# Local owned gateway
OWNED_GATEWAY_PORT=8787
OWNED_DEV_USER_EMAIL=owner@steelbuilder.local
OWNED_DEV_USER_ROLE=admin
# Set true to require valid Supabase bearer token for /api/auth/* endpoints
OWNED_REQUIRE_AUTH=false
OWNED_STORAGE_BUCKET=uploads
OWNED_INVITE_REDIRECT_TO=http://localhost:5173

# Supabase (required for non-stub behavior in gateway)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# Optional: enable real AI route in gateway
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
